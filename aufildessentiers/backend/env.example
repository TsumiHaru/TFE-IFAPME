# Configuration de sécurité - Copier vers .env et modifier les valeurs
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=votre-secret-jwt-tres-securise
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Base de données (exemple)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=aufildessentiers_db

# Sécurité
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://aufildessentiers.mehdikorichi.com
VALID_API_KEYS=api-key-test-123,api-key-prod-456

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=50

# Configuration Email Infomaniak
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=587
SMTP_USER=votre-email@votre-domaine.com
SMTP_PASSWORD=votre-mot-de-passe-email

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# HTTPS (pour la production)
HTTPS_CERT_PATH=/path/to/cert.pem
HTTPS_KEY_PATH=/path/to/private-key.pem